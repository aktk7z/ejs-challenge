<%- include("partials/header"); -%>

<h1>Home</h1>
<p><%= homeStartingContent %></p>

<% posts.forEach(post => { %>
    <h1><%= post.title %></h1>
    <% if (post.content.length === 100) { %>
        <p><%= post.content %><span><a href=<%= `posts/${post.title.replace(/[&\/\\#, +()$~%.'":*?<>{}]/g, '-')}` %>>Read More</a></span></p>
    <% } else { %>
        <p><%= post.content %></p>
    <% } %> 
<% }); %>

<%- include("partials/footer"); -%>
